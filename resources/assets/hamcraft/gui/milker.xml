<gui>
    <window mode="dynamic">
        <rect x="0" y="0" w="180" h="180"/>
        <dynamic_background file="widgets" scale="256" tilesize="4">
            <rect x="84" y="0" w="12" h="12"/>
        </dynamic_background>
    </window>

    <widgets>

        <widget name="title" type="WidgetLabel" label="tile.hamcraft.milker.name">
            <origin x="8" y="8"/>
            <color r="0.25" g="0.25" b="0.25" a="1.0"/>
        </widget>

        <widget name="powerGauge" type="WidgetPowerGaugeDynamic" bgtexture="gaugeBackground" fgtexture="powerGauge">
            <rect x="9" y="20" w="18" h="52"/>
            <fg_offset x="1" y="1" w="-2" h="-2"/>
        </widget>

        <widget name="fluidGauge" type="WidgetFluidGaugeDynamic" bgtexture="gaugeBackground" fgtexture="fluidGauge">
            <rect x="28" y="20" w="18" h="52"/>
            <fg_offset x="1" y="1" w="-2" h="-2"/>
        </widget>

        <widget name="player_inventory" type="WidgetPlayerInventory" texture="inventorySlot" hotbarSpace="4">
            <origin x="9" y="76"/>
            <fg_offset x="1" y="1"/>
            <invColor r="1.0" g="1.0" b="1.0" a="1.0"/>
            <hotbarColor r="1.0" g="1.0" b="1.0" a="1.0"/>
        </widget>

    </widgets>
</gui>
